<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:forceDarkAllowed="true"
    android:textAlignment="center"
    android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
    tools:context=".RegisterActivity">

    <Button
        android:id="@+id/registerSubmit_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="143dp"
        android:layout_marginTop="628dp"
        android:layout_marginEnd="143dp"
        android:layout_marginBottom="55dp"
        android:onClick="onRegister"
        android:text="@string/confirmreg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/nameSurnameREG_txt"
        android:layout_width="310dp"
        android:layout_height="39dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="109dp"
        android:layout_marginEnd="14dp"
        android:layout_marginBottom="583dp"
        android:ems="10"
        android:hint="@string/hint_namesurname"
        android:importantForAutofill="no"
        android:inputType="text"
        android:singleLine="true"
        android:textAllCaps="true"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        tools:ignore="TouchTargetSizeCheck,TextContrastCheck,TextContrastCheck" />

    <EditText
        android:id="@+id/indexREG_txt"
        android:layout_width="175dp"
        android:layout_height="48dp"
        android:layout_marginStart="193dp"
        android:layout_marginTop="185dp"
        android:layout_marginEnd="43dp"
        android:layout_marginBottom="498dp"
        android:ems="10"
        android:hint="@string/hint_indexREG"
        android:importantForAutofill="no"
        android:inputType="text"
        android:singleLine="true"
        android:textAllCaps="true"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="NotSibling,TextContrastCheck,TextContrastCheck" />

    <Spinner
        android:id="@+id/indexYear_spin"
        android:layout_width="122dp"
        android:layout_height="48dp"
        android:layout_marginStart="58dp"
        android:layout_marginTop="185dp"
        android:layout_marginEnd="231dp"
        android:layout_marginBottom="498dp"
        android:spinnerMode="dropdown"
        android:textAlignment="textEnd"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="SpeakableTextPresentCheck" />

    <TextView
        android:id="@+id/indexSlash_text"
        android:layout_width="16dp"
        android:layout_height="44dp"
        android:layout_marginStart="180dp"
        android:layout_marginTop="189dp"
        android:layout_marginEnd="215dp"
        android:layout_marginBottom="498dp"
        android:text="/"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/indexREG_text"
        android:layout_width="307dp"
        android:layout_height="25dp"
        android:layout_marginStart="58dp"
        android:layout_marginTop="160dp"
        android:layout_marginEnd="46dp"
        android:layout_marginBottom="546dp"
        android:text="@string/br_indexa"
        android:textSize="18sp"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <EditText
        android:id="@+id/singiMailREG_txt"
        android:layout_width="310dp"
        android:layout_height="48dp"
        android:layout_marginStart="58dp"
        android:layout_marginTop="267dp"
        android:layout_marginEnd="43dp"
        android:layout_marginBottom="416dp"
        android:ems="10"
        android:hint="@string/hint_singimail"
        android:importantForAutofill="no"
        android:inputType="text"
        android:maxLength="60"
        android:singleLine="true"
        android:textAllCaps="true"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="TextContrastCheck,TextContrastCheck" />

    <EditText
        android:id="@+id/passREG_txt"
        android:layout_width="310dp"
        android:layout_height="48dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="339dp"
        android:layout_marginEnd="14dp"
        android:layout_marginBottom="354dp"
        android:ems="10"
        android:hint="@string/hint_pass"
        android:importantForAutofill="no"
        android:inputType="text|textPassword"
        android:singleLine="true"
        android:textAllCaps="true"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.523"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.1"
        tools:ignore="TextContrastCheck,TextContrastCheck" />

    <ImageButton
        android:id="@+id/english_course_btn"
        android:layout_width="120dp"
        android:layout_height="85dp"
        android:layout_marginStart="83dp"
        android:layout_marginTop="418dp"
        android:layout_marginEnd="208dp"
        android:layout_marginBottom="228dp"
        android:background="@android:color/tertiary_text_light"
        android:contentDescription="@string/app_name"
        android:onClick="englishCourses"
        android:padding="5dp"
        android:scaleType="matrix"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/english_us"
        tools:ignore="DuplicateSpeakableTextCheck,DuplicateSpeakableTextCheck"
        tools:src="@drawable/english_us"
        tools:srcCompat="@drawable/english_us" />

    <ImageButton
        android:id="@+id/serbian_course_btn"
        android:layout_width="120dp"
        android:layout_height="85dp"
        android:layout_marginStart="217dp"
        android:layout_marginTop="418dp"
        android:layout_marginEnd="74dp"
        android:layout_marginBottom="228dp"
        android:background="@android:color/tertiary_text_light"
        android:contentDescription="@string/app_name"
        android:onClick="serbianCourses"
        android:padding="5dp"
        android:scaleType="matrix"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/serbian_rs"
        tools:src="@drawable/serbian_rs"
        tools:srcCompat="@drawable/serbian_rs" />

    <Spinner
        android:id="@+id/faculty_spin"
        android:layout_width="320dp"
        android:layout_height="48dp"
        android:layout_marginStart="52dp"
        android:layout_marginTop="514dp"
        android:layout_marginEnd="39dp"
        android:layout_marginBottom="170dp"
        android:gravity="fill_horizontal|fill_vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="SpeakableTextPresentCheck" />

    <Spinner
        android:id="@+id/course_spin"
        android:layout_width="320dp"
        android:layout_height="51dp"
        android:layout_marginStart="53dp"
        android:layout_marginTop="571dp"
        android:layout_marginEnd="38dp"
        android:layout_marginBottom="109dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="SpeakableTextPresentCheck" />

    <TextView
        android:id="@+id/title_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:layout_marginBottom="680dp"
        android:gravity="center"
        android:text="@string/title_reg"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.616"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/nameSurnameREG_text"
        android:layout_width="311dp"
        android:layout_height="25dp"
        android:layout_marginStart="56dp"
        android:layout_marginTop="85dp"
        android:layout_marginEnd="44dp"
        android:layout_marginBottom="621dp"
        android:text="@string/name_surname"
        android:textSize="18sp"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/singiMailREG_text"
        android:layout_width="308dp"
        android:layout_height="26dp"
        android:layout_marginStart="57dp"
        android:layout_marginTop="241dp"
        android:layout_marginEnd="46dp"
        android:layout_marginBottom="464dp"
        android:text="@string/singimail"
        android:textSize="18sp"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/passREG_text"
        android:layout_width="310dp"
        android:layout_height="22dp"
        android:layout_marginStart="56dp"
        android:layout_marginTop="316dp"
        android:layout_marginEnd="45dp"
        android:layout_marginBottom="393dp"
        android:text="@string/password"
        android:textSize="18sp"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/courseREG_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="91dp"
        android:layout_marginTop="390dp"
        android:layout_marginEnd="91dp"
        android:layout_marginBottom="317dp"
        android:text="@string/course"
        android:textSize="18sp"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.75"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/footer_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="58dp"
        android:layout_marginTop="684dp"
        android:layout_marginEnd="58dp"
        android:layout_marginBottom="28dp"
        android:text="@string/copyright"
        android:textAllCaps="false"
        android:textSize="16sp"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>