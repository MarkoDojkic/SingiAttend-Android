<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FF9800"
    android:forceDarkAllowed="true"
    android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
    tools:context=".LoginActivity">

    <EditText
        android:id="@+id/pass_txt"
        android:layout_width="345dp"
        android:layout_height="42dp"
        android:layout_marginStart="35dp"
        android:layout_marginEnd="36dp"
        android:autoSizeTextType="uniform"
        android:ems="10"
        android:hint="@string/hint_pass"
        android:importantForAutofill="no"
        android:inputType="none|textPassword"
        android:minHeight="48dp"
        android:textColor="#302F2F"
        android:textColorHint="#838080"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pass_text"
        tools:ignore="TouchTargetSizeCheck,TextContrastCheck" />

    <Button
        android:id="@+id/login_btn"
        android:layout_width="141dp"
        android:layout_height="48dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="36dp"
        android:autoSizeTextType="uniform"
        android:onClick="onLogin"
        android:text="@string/login"
        app:layout_constraintEnd_toStartOf="@+id/save_for_biometrics_switch"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pass_txt" />

    <Button
        android:id="@+id/login_with_biometrics_btn"
        android:layout_width="192dp"
        android:layout_height="46dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="16dp"
        android:autoSizeTextType="uniform"
        android:onClick="onLoginWithBiometrics"
        android:text="@string/loginUsingBiometricsAuthentication"
        android:textAlignment="center"
        app:layout_constraintEnd_toStartOf="@+id/register_btn"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/login_btn" />

    <Switch
        android:id="@+id/save_for_biometrics_switch"
        android:layout_width="195dp"
        android:layout_height="46dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="36dp"
        android:autoSizeTextType="uniform"
        android:text="@string/saveForBiometricsAuthentication"
        android:textAlignment="center"
        android:textColor="#283735"
        android:textSize="2sp"
        app:layout_constraintStart_toEndOf="@+id/login_btn"
        app:layout_constraintTop_toBottomOf="@+id/pass_txt" />

    <Button
        android:id="@+id/register_btn"
        android:layout_width="146dp"
        android:layout_height="48dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="25dp"
        android:autoSizeTextType="uniform"
        android:onClick="onRegistracija"
        android:text="@string/register"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/login_with_biometrics_btn"
        app:layout_constraintTop_toBottomOf="@+id/save_for_biometrics_switch" />

    <EditText
        android:id="@+id/index_txt"
        android:layout_width="345dp"
        android:layout_height="50dp"
        android:layout_marginStart="35dp"
        android:layout_marginEnd="36dp"
        android:autoSizeTextType="uniform"
        android:ems="10"
        android:hint="@string/hint_index"
        android:importantForAutofill="no"
        android:inputType="none|textNoSuggestions"
        android:minHeight="48dp"
        android:textColor="#302F2F"
        android:textColorHint="#838080"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/index_text"
        tools:ignore="TouchTargetSizeCheck,TextContrastCheck" />

    <TextView
        android:id="@+id/index_text"
        android:layout_width="114dp"
        android:layout_height="29dp"
        android:layout_marginStart="35dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="262dp"
        android:autoSizeTextType="uniform"
        android:text="@string/br_indexa"
        android:textColor="#283735"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/pass_text"
        android:layout_width="83dp"
        android:layout_height="27dp"
        android:layout_marginStart="35dp"
        android:layout_marginTop="11dp"
        android:layout_marginEnd="293dp"
        android:autoSizeTextType="uniform"
        android:text="@string/password"
        android:textColor="#283735"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/index_txt" />

</androidx.constraintlayout.widget.ConstraintLayout>